@model WebApp.ViewModels.ConversationCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Conversation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Conversation.Name" class="control-label"></label>
                <input asp-for="Conversation.Name" class="form-control" />
                <span asp-validation-for="Conversation.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Conversation.StudyGroupId" class="control-label"></label>
                <select asp-for="Conversation.StudyGroupId" class="form-control" asp-items="Model.StudyGroupSelectList"></select>
                <span asp-validation-for="Conversation.StudyGroupId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Conversation.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
