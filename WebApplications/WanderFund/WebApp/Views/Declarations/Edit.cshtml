@using App.Resources.Domain
@model WebApp.ViewModels.DeclarationCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Declaration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Declaration.Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Declaration.Active" /> @Html.DisplayNameFor(model => Declaration.Active)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Declaration.Course!.Name" class="control-label"></label>
                <select asp-for="Declaration.CourseId" class="form-control" asp-items="Model.CourseSelectList"></select>
                <span asp-validation-for="Declaration.CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
